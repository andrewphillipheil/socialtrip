<% if current_user %>
  <div id='friends'>
    <p><%= link_to  "Invite your facebook friends", '#', :id => 'invite_fb_friends' %></p>
    
    <div id='fb-root'></div>
    
    <script src="http://connect.facebook.net/en_US/all.js"></script>
    
    <script>
      $(function(){
        FB.init({
          appId: '129652407201708',
          cookie: false,
          status: true,
          xfbml  : true
        });
                
        $('a#invite_fb_friends').click(function(){
          FB.ui({ method: 'apprequests', message: '<%= current_user.first_name %> <%=current_user.last_name %> has invited you use the Socialtrip' });                    
        });
      });
    </script>
  </div>
<% end %>