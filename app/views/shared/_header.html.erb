<header>
  <div class='navbar navbar-fixed-top'>
    <div class='navbar-inner'>
      <div class='container-fluid'>
        <!-- logo start -->
        <a class='brand' href='/'>
          <i class='icon-heart-empty'></i>
          <span class='hidden-phone'>Tripize</span>
        </a>
        <!-- logo end -->
        <ul class='nav pull-right'>
          <!-- color change -->
          <li class='dropdown first only-icon'>
            <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
            <i class='icon-adjust'></i>
            </a>
            <% if @trips %>
              <ul class='dropdown-menu'>
                <li>
                  <% @trips.each do |trip| %>
                    <%= link_to "<i class='icon-adjust text-error'></i> #{trip.name}".html_safe, trip %>
                  <% end %>
                </li>
              </ul>
            <% end %>
          </li>
          <!-- color change end -->

          <!-- widget start -->
          <li class='dropdown second only-icon widget'>
            <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
              <i class='icon-rss'></i>
              <div class='label'></div>
            </a>
            <ul class='dropdown-menu'>
              <li>
                <a href='#'>
                  <div class='widget-body'>
                    <div class='pull-left icon'>
                      <i class='icon-user text-success'></i>
                    </div>
                    <div class='pull-left text'>
                      John Doe signed up
                      <small class='muted'>just now</small>
                    </div>
                  </div>
                </a>
              </li>
              <li class='widget-footer'>
                <a href='#'>All notifications</a>
              </li>
            </ul>
          </li>
          <!-- widget end -->

          <!-- user menu start -->
          <li class='dropdown third'>
            <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
              <img alt="Avatar" height="23" src="/assets/rails.png" width="23" />
              <span class='user-name hidden-phone'>
                <% if user_signed_in? %>
                  <%= current_user.full_name %>
                <% else %>
                  Sign In
                <% end %>
              </span>
              <b class='caret'></b>
            </a>
            <ul class='dropdown-menu'>
              <% if user_signed_in? %>
                <li>
                <a href='#'>Profile</a>
                </li>
                <li>
                <a href='#'>Settings</a>
                </li>
                <li class='divider'></li>
                <li>
                <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %>
                </li>
              <% else %>
                <li><%= link_to "Facebook Login", user_omniauth_authorize_path(:facebook) %></li>
                <li><%= link_to "Tripize Login", new_user_session_path %></li>
              <% end %>
            </ul>
          </li>
          <!-- user menu end -->
        </ul>
          <!-- search form start -->
        <form accept-charset="UTF-8" action="#" class="navbar-search pull-right hidden-phone" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="GBUWyPdB5sOO6L8OiiUE1btqNiv+BbpLtRZeqcIJU1U=" /></div>
        <input autocomplete="off" class="search-query span2" id="q" name="q" placeholder="Search" type="text" value="" />
        </form>
          <!-- search form end -->
      </div>
    </div>
  </div>
</header>