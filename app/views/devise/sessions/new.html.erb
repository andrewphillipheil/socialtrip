<div class="offset4 span4">
	<div class="well sign-in margin100">
		<h4>Please sign in</h4>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		  <%= f.email_field :email, :placeholder => "Email address", :class => "input-block-level" %>

		  <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>

		  <% if devise_mapping.rememberable? -%>
		    <label class="checkbox">
		    	<%= f.check_box :remember_me %> Remember me
		    </label>	
		  <% end -%>

		  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
		  
		<% end %>

		<%= render :partial => "devise/shared/links" %>

	</div>	
</div>